[PHP]

short_open_tag = On

;############################################
;## adjust memory limit

;    memory_limit 64M
memory_limit = 1024M
max_execution_time = 18000
max_input_vars = 25000

;############################################
;## disable magic quotes for php request vars

magic_quotes_gpc = Off

;############################################
'## JOH: Allow much bigger than default file uploads
post_max_size = 64M
upload_max_filesize = 32M

;############################################
;## JOH: Turn off URL fopen and include (security)

allow_url_fopen = On
allow_url_include = Off

;############################################
;## JOH:Set default timezone because PHP won't get it right by itself.

date.timezone = Australia/Adelaide

;############################################
;## enable resulting html compression

;zlib.output_compression = on

[Session]
;############################################
;## disable automatic session start
;## before autoload was initialized

session.auto_start = Off

session.gc_maxlifetime = 86400


;###########################################
;# disable user agent verification to not break multiple image upload

;    suhosin.session.cryptua = off

;###########################################
;## Local APC configuration

; The number of shared memory segments to allocate for the compiler cache.
apc.shm_segments=1
; The size of each shared memory segment in MB.
apc.shm_size=128
; A "hint" about the number of distinct source files that will be included or
; requested on your web server. Set to zero or omit if you're not sure;
apc.num_files_hint=4096
; Just like num_files_hint, a "hint" about the number of distinct user cache
; variables to store.  Set to zero or omit if you're not sure;
apc.user_entries_hint=1
; The number of seconds a cache entry is allowed to idle in a slot in case this
; cache entry slot is needed by another entry.
apc.ttl=300
; The number of seconds a user cache entry is allowed to idle in a slot in case
; this cache entry slot is needed by another entry.
apc.user_ttl=300
; On by default, but can be set to off and used in conjunction with positive
; apc.filters so that files are only cached if matched by a positive filter.
apc.cache_by_default=1
; Setting this enables APC for the CLI version of PHP (Mostly for testing and debugging).
apc.enable_cli=1
; Verification with ctime will avoid problems caused by programs such as svn or rsync by making
; sure inodes havn't changed since the last stat. APC will normally only check mtime.
apc.stat_ctime=1

;###########################################
;## JOH: Disable persistent connections and increase timeouts to try and resolve MySQL Server has gone away errors.
mysql.allow_persistent = Off
mysql.connect_timeout = 300
default_socket_timeout = 300
